<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:paddingBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="229dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toTopOf="@id/scrollView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayoutMain">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/background_rect"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottie2"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/healthcare"
                        tools:layout_editor_absoluteX="0dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- New Card: First Aid Kits You Need -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/firstAidKitsCardView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/buttonFirstAidKits"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:text="@string/first_aid_kits"
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:fontFamily="@font/montserrat_bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewFirstAidKits"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewFirstAidKits"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/first_aid_kits_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


                <!-- Horizontal ScrollView for cards -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Card 1: First Aid -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/firstbackground"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/button1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="@string/basic_first_aid"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold"
                                    />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 2: Psyc First Aid -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/psych_background"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/button2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="@string/psychological_first_aid"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold"
                                    />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 2: Disaster Management -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView3"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/disaster_background"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="@string/disaster_management"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold"
                                    />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 3: Basic Sanitation -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView4"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/sanitation_background"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/button4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="@string/basic_sanitation_t"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold"
                                    />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Quiz Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quizCardView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView3">

                    <Button
                        android:id="@+id/buttonQuiz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="160dp"
                            android:gravity="center"
                            android:text="@string/test_your_knowledge"
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:fontFamily="@font/montserrat_bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewQuiz"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewQuiz"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/quiz_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Safety & Preparedness Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/safetyPreparednessCardView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView3">

                    <Button
                        android:id="@+id/buttonSafetyPreparedness"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/safety_preparedness"
                            android:textColor="@color/white"
                            android:textSize="19dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:fontFamily="@font/montserrat_bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewSafetyPreparedness"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewSafetyPreparedness"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/safety_preparedness_icon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- Second Horizontal ScrollView for RHUs -->
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollViewRhu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:fillViewport="true"
                    app:layout_constraintTop_toBottomOf="@+id/textViewHealthFacilities">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Card 2: Polangui Rural Health Unit -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewPolanguiRhu"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/polrhumain"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/buttonPolanguiRhu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Polangui RHU"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>


                        <!-- Card 6: Oas Rural Health Unit -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewOasRhu"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/oasrhumain"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/buttonOasRhu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Oas RHU"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 7: Ligao City Hospital -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewLigaoCityHospital"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/zonemain"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/buttonZone"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Zone Medical and Intervention Hospital"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 8: Ligao Rural Health Unit -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewLigaoRhu"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ligao_rhu_background"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/buttonLigaoRhu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="City Health Office Ligao"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Card 8: Ligao Rural Health Unit -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewDuran"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <!-- Background Image -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/duranmain"
                                    android:scaleType="centerCrop" />

                                <!-- Red Fading Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/overlay_red" />

                                <!-- Transparent Button -->
                                <Button
                                    android:id="@+id/buttonDuran"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent" />

                                <!-- Text Overlay -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|start"
                                    android:layout_margin="8dp"
                                    android:text="Josefina Belmonte Duran Albay Provincial Hospital"
                                    android:textSize="14dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold" />
                            </FrameLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- New Card: Flashlight -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/flashlightCardView"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/red"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/constraintLayout"
                    app:layout_constraintEnd_toEndOf="parent">

                    <Button
                        android:id="@+id/buttonFlashlight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="170dp"
                            android:layout_height="180dp"
                            android:gravity="center"
                            android:text="@string/flashlight"
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:fontFamily="@font/montserrat_bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageViewFlashlight"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageViewFlashlight"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/flashlight"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/red"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>
